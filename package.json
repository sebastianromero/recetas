{
  "scripts": {
	"build": "npx antora antora-playbook.yml",
	"watch": "npx chokidar-cli 'modules/**/*' 'antora-playbook.yml' --ignore 'dist/**/*' -c 'npm run build'",
	"serve": "npx live-server dist",
	"dev": "concurrently -k -n WATCH,SERVE -c green,cyan \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
	"antora": "3.1.12",
	"chokidar": "^4.0.3",
	"concurrently": "^9.2.0",
	"live-server": "^1.2.2",
	"wrangler": "^4.28.1"
  }
}
